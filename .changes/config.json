{
  "gitSiteUrl": "https://www.github.com/tauri-apps/tauri-action/",
  "pkgManagers": {
    "javascript": {
      "version": true,
      "getPublishedVersion": "npm view ${ pkgFile.pkg.name } version",
      "prepublish": ["pnpm install --no-optional"],
      "publish": [
        {
          "command": "echo '<details>\n<summary><em><h4>NPM Package Publish</h4></em></summary>\n\n```'",
          "dryRunCommand": true,
          "pipe": true
        },
        {
          "command": "pnpm publish --access public --loglevel silly --no-git-checks",
          "dryRunCommand": "pnpm publish --dry-run --access public ",
          "pipe": true
        },
        {
          "command": "echo '```\n\n</details>\n'",
          "dryRunCommand": true,
          "pipe": true
        }
      ],
      "postpublish": []
    }
  },
  "packages": {
    "action": {
      "path": ".",
      "manager": "javascript",
      "publish": [
        "git tag v${ pkgFile.versionMajor } -f",
        "git tag v${ pkgFile.versionMajor }.${ pkgFile.versionMinor } -f",
        "git push --tags -f"
      ],
      "getPublishedVersion": "git tag -a -m \"v${ pkgFile.version }\" v${ pkgFile.version } 2>/dev/null || echo ${ pkgFile.version }",
      "assets": false
    }
  }
}
